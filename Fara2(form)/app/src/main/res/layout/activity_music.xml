<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mamad.fara2form.MusicActivity">

    <Button
        style="@android:style/Widget.TextView.PopupMenu"
        android:id="@+id/playBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="363dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />

    <Button
        style="@android:style/Widget.TextView.PopupMenu"
        android:id="@+id/pauseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puase"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="363dp"
        android:layout_marginBottom="83dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:id="@+id/volumeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/playBtn"
        android:layout_centerHorizontal="true" />
    <SeekBar
        android:id="@+id/scubbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pauseBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp" />

    <TextView
        android:id="@+id/textSeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/volumeBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="0" />
</RelativeLayout>
