<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contact_pimg"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contact_pimg"
        android:layout_toRightOf="@+id/contact_pimg"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="mamad farrokh"
        android:textColor="#000000"/>
    />
    <TextView
        android:id="@+id/contact_phn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="09021303331"
        android:layout_below="@+id/contact_name"
        android:layout_alignLeft="@+id/contact_name"
        android:textColor="#2e5cf1"/>

    <ImageView
        android:id="@+id/ic_call"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/call_icon"
        android:layout_alignTop="@+id/ic_sms"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/ic_sms"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ic_sms"
        android:layout_alignBottom="@+id/contact_pimg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />


</RelativeLayout>