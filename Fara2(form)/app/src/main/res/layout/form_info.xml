<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:weightSum="1"
    android:id="@+id/form_info_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <!-- ** layout_weight means the percentage that component will take from the layout *** -->

        <EditText
            android:id="@+id/name_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:hint="Name"
            android:inputType="textPersonName"
            android:alpha="0"/>

        <EditText
            android:id="@+id/phn_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:maxLength="11"
            android:hint="Phone no."
            android:inputType="phone"
            android:alpha="0"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share my phone number"
        android:checked="true"
        android:alpha="0"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f89e27"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:alpha="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.02">

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/email"
            android:alpha="0"
            />

        <EditText
            android:id="@+id/email_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Email add."
            android:inputType="textEmailAddress"
            android:alpha="0"/>
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5586f9"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:alpha="0"/>

    <Button
        android:id="@+id/submit_btn"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:alpha="0"/>

</LinearLayout>